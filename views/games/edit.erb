<div style="width: 100%; display: grid; grid-template-columns: 1 1; grid-template-rows: 1;">

    <form action="/games/<%=@game_id%>/update" method="post">
    
        <h2>Tags</h2>
        <select name="tags_selection[]" multiple=true>
            <% @tags.each do |tag| %>.
                <option value="<%=tag['tag_id']%>" <%= @applied_tags.include?(tag) ? "selected" : "" %>>
                    <%=tag['tag_name']%>
                </option>
            <% end %>
        </select>

        <button type="submit">Apply changes</button>
    </form>
</div>
