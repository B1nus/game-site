<%# Check for admin priveleges %>
<% raise 'You\'re not alllowed to be here.' if !admin? %>

<form action="/admin/tags/<%= tag['id'] %>/update" method="post"> 
    <input type="text" name="name" value="<%= tag['name'] %>">
    <select name="purpose_id">
        <% tag_purposes.each do |purpose| %>
            <option value="<%= purpose['id'] %>" <%= 'selected' if purpose['id'] == tag['purpose_id'] %>>
                <%= purpose['name'] %>
            </option>
        <% end %>
    </select>
    <input type="submit" value="Change">
</form>

