<%# Check for admin priveleges %>
<% raise 'You\'re not alllowed to be here.' if !admin? %>

<form action="/admin/tags/<%= @tag['id'] %>/update" method="post"> 
    <input type="text" name="tag_name" value=<%= @tag['tag_name'] %>>
    <select name="tag_purpose_id">
        <% tag_purposes.each do |tag_purpose| %>
            <option value=<%= tag_purpose['id'] %> <%= 'selected' if tag_purpose['id'] == @tag['tag_purpose_id'] %>>
                <%= tag_purpose['name'] %>
            </option>
        <% end %>
    </select>
    <input type="submit" value="Change">
</form>

